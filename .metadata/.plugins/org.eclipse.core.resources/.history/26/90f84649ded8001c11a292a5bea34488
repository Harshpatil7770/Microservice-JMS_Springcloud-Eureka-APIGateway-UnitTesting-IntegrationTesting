server:
  port: 9095
spring:
    application:
      name: API-GATEWAY
    cloud:
       gateway:
        routes:
        - id: category-service
          uri: http://localhost:9090
          predicates:
            - Path=/api/category/**
          filters:
            - name: CircuitBreaker
              args: 
                 name: category-service
                 fallbackuri: forward:/categoryFallback  
        - id: brand-service
          uri: http://localhost:9091
          predicates:
            - Path=/api/brands/**
          filters:
            - name: CircuitBreaker
              args:
                name: brand-service 
                fallbackuri: forward:/brandFallback
        - id: product-service
          uri: lb://product-service
          predicates:
            - Path=/api/product/**
          filters:
            - name: CircuitBreaker
              args:
                name: product-service
                fallbackuri: forward:/productFallback
                
                
management:  endpoint:    web:      exposure:        include:                              
               